<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="true">
        <shape>
            <size android:height="46dp" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_active="false">
        <shape>
            <size android:height="46dp" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>