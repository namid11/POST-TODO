<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <size
                android:height="40dp"
                android:width="40dp" />
            <corners android:radius="32dp" />
            <padding
                android:top="12dp"
                android:right="12dp"
                android:left="12dp"
                android:bottom="12dp" />
            <gradient
                android:startColor="@color/colorTodoTileStart"
                android:endColor="@color/colorTodoTileEnd"
                android:angle="315" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <size
                android:height="40dp"
                android:width="40dp" />
            <corners android:radius="32dp" />
            <padding
                android:top="12dp"
                android:right="12dp"
                android:left="12dp"
                android:bottom="12dp" />
            <gradient
                android:startColor="@color/colorTodoTileStartPressed"
                android:endColor="@color/colorTodoTileEndPressed"
                android:angle="315" />
        </shape>
    </item>
</selector>