<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <size
                android:height="28dp"
                android:width="28dp" />
            <corners android:radius="20dp" />
            <padding
                android:top="6dp"
                android:right="6dp"
                android:left="6dp"
                android:bottom="6dp" />
            <gradient
                android:startColor="@color/colorTodoTileStart"
                android:endColor="@color/colorTodoTileEnd"
                android:angle="315" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <size
                android:height="28dp"
                android:width="28dp" />
            <corners android:radius="20dp" />
            <padding
                android:top="6dp"
                android:right="6dp"
                android:left="6dp"
                android:bottom="6dp" />
            <gradient
                android:startColor="@color/colorTodoTileStartPressed"
                android:endColor="@color/colorTodoTileEndPressed"
                android:angle="315" />
        </shape>
    </item>
</selector>